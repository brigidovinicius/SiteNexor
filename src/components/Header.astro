---

<header class="bg-white shadow-sm border-b border-zinc-200 sticky top-0 z-50">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <a href="/" class="text-2xl font-bold tracking-tight text-zinc-900" data-reveal="fade-in">
        NEXOR <span class="text-brand-700">Industrial</span>
      </a>
      
      <!-- Desktop Menu -->
      <ul class="hidden lg:flex gap-8 items-center" data-reveal="fade-in">
        <li><a href="/" class="text-zinc-700 hover:text-brand-700 transition-colors font-medium">Home</a></li>
        <li><a href="/quem-somos" class="text-zinc-700 hover:text-brand-700 transition-colors font-medium">Quem Somos</a></li>
        <li class="relative group">
          <button class="text-zinc-700 hover:text-brand-700 transition-colors font-medium flex items-center gap-1">
            Soluções
            <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <ul class="absolute top-full left-0 mt-2 w-72 bg-white shadow-lg border border-zinc-200 rounded-lg py-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
            <li><a href="/solucoes/chave-na-mao" class="block px-4 py-2 text-zinc-700 hover:bg-zinc-50 hover:text-brand-700">Chave na Mão (Turnkey)</a></li>
            <li><a href="/solucoes/obras-civis-industriais" class="block px-4 py-2 text-zinc-700 hover:bg-zinc-50 hover:text-brand-700">Obras Civis Industriais</a></li>
            <li><a href="/solucoes/infraestrutura-adequacoes" class="block px-4 py-2 text-zinc-700 hover:bg-zinc-50 hover:text-brand-700">Infraestrutura e Adequações</a></li>
            <li><a href="/solucoes/manutencao-civil-industrial" class="block px-4 py-2 text-zinc-700 hover:bg-zinc-50 hover:text-brand-700">Manutenção Civil Industrial</a></li>
          </ul>
        </li>
        <li><a href="/seguranca-e-qualidade" class="text-zinc-700 hover:text-brand-700 transition-colors font-medium">Segurança e Qualidade</a></li>
        <li>
          <a href="/contato" class="bg-brand-700 text-white px-6 py-2 rounded-lg hover:bg-brand-800 transition-colors font-medium">
            Contato
          </a>
        </li>
      </ul>
      
      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="lg:hidden text-zinc-700" aria-label="Menu">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    
    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden lg:hidden mt-4 pb-4 border-t border-zinc-200 pt-4">
      <ul class="space-y-3">
        <li><a href="/" class="block text-zinc-700 hover:text-brand-700 font-medium py-2">Home</a></li>
        <li><a href="/quem-somos" class="block text-zinc-700 hover:text-brand-700 font-medium py-2">Quem Somos</a></li>
        <li>
          <button id="mobile-solucoes-button" class="flex items-center justify-between w-full text-zinc-700 hover:text-brand-700 font-medium py-2">
            Soluções
            <svg class="w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <ul id="mobile-solucoes" class="hidden pl-4 mt-2 space-y-2">
            <li><a href="/solucoes/chave-na-mao" class="block text-zinc-600 hover:text-brand-700 py-1">Chave na Mão (Turnkey)</a></li>
            <li><a href="/solucoes/obras-civis-industriais" class="block text-zinc-600 hover:text-brand-700 py-1">Obras Civis Industriais</a></li>
            <li><a href="/solucoes/infraestrutura-adequacoes" class="block text-zinc-600 hover:text-brand-700 py-1">Infraestrutura e Adequações</a></li>
            <li><a href="/solucoes/manutencao-civil-industrial" class="block text-zinc-600 hover:text-brand-700 py-1">Manutenção Civil Industrial</a></li>
          </ul>
        </li>
        <li><a href="/seguranca-e-qualidade" class="block text-zinc-700 hover:text-brand-700 font-medium py-2">Segurança e Qualidade</a></li>
        <li>
          <a href="/contato" class="block bg-brand-700 text-white px-6 py-2 rounded-lg hover:bg-brand-800 transition-colors font-medium text-center mt-4">
            Contato
          </a>
        </li>
      </ul>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileSolucoesButton = document.getElementById('mobile-solucoes-button');
  const mobileSolucoes = document.getElementById('mobile-solucoes');

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }

  if (mobileSolucoesButton && mobileSolucoes) {
    mobileSolucoesButton.addEventListener('click', () => {
      mobileSolucoes.classList.toggle('hidden');
      const svg = mobileSolucoesButton.querySelector('svg');
      if (svg) {
        svg.classList.toggle('rotate-180');
      }
    });
  }
</script>
