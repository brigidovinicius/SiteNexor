---
interface Props {
  quote: string;
  href?: string;
}

const { quote, href } = Astro.props;
---

<section class="section bg-brand text-white border-y border-white/10">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto">
      {href ? (
        <a href={href} class="block text-center group" data-reveal="fade-up">
          <blockquote class="text-xl md:text-2xl font-semibold tracking-tight leading-relaxed text-white/95 group-hover:text-white transition-premium">
            "{quote}"
          </blockquote>
        </a>
      ) : (
        <blockquote 
          class="text-xl md:text-2xl font-semibold text-center tracking-tight leading-relaxed text-white/95" 
          data-reveal="fade-up"
        >
          "{quote}"
        </blockquote>
      )}
    </div>
  </div>
</section>

