---
interface Props {
  quote: string;
  href?: string;
}

const { quote, href } = Astro.props;
---

<section class="py-16 bg-brand-700 text-white">
  <div class="container mx-auto px-4">
    {href ? (
      <a href={href} class="block text-center group" data-reveal="fade-up">
        <p class="text-2xl md:text-3xl font-bold max-w-4xl mx-auto group-hover:opacity-90 transition-opacity">
          {quote}
        </p>
      </a>
    ) : (
      <p class="text-2xl md:text-3xl font-bold text-center max-w-4xl mx-auto" data-reveal="fade-up">
        {quote}
      </p>
    )}
  </div>
</section>

