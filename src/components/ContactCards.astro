---
import { siteConfig } from '../lib/site/config';
---

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
  <!-- Email -->
  <div class="p-8 border border-neutral-200" data-reveal="fade-up">
    <h3 class="font-semibold text-brand-primary mb-3 tracking-tight">Email</h3>
    <a href={`mailto:${siteConfig.email}`} class="text-neutral-700 hover:text-brand-primary transition-colors">
      {siteConfig.email}
    </a>
  </div>
  
  <!-- WhatsApp -->
  <div class="p-8 border border-neutral-200" data-reveal="fade-up" data-reveal-delay="100">
    <h3 class="font-semibold text-brand-primary mb-3 tracking-tight">WhatsApp</h3>
    <a href={siteConfig.whatsapp} class="text-neutral-700 hover:text-brand-primary transition-colors">
      Corporativo (em breve)
    </a>
  </div>
  
  <!-- Atuação -->
  <div class="p-8 border border-neutral-200" data-reveal="fade-up" data-reveal-delay="200">
    <h3 class="font-semibold text-brand-primary mb-3 tracking-tight">Atuação</h3>
    <p class="text-neutral-700">Regional e Nacional</p>
  </div>
</div>

