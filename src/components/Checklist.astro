---
interface Props {
  items: string[];
  class?: string;
}

const { items, class: className = '' } = Astro.props;
---

<ul class={`space-y-5 ${className}`}>
  {items.map((item) => (
    <li class="flex items-start gap-4" data-reveal="fade-up">
      <svg 
        class="w-5 h-5 text-accent flex-shrink-0 mt-1 transition-colors" 
        fill="none" 
        stroke="currentColor" 
        viewBox="0 0 24 24" 
        stroke-width="2.5"
        aria-hidden="true"
      >
        <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"></path>
      </svg>
      <span class="text-text-secondary text-lg leading-relaxed">{item}</span>
    </li>
  ))}
</ul>

