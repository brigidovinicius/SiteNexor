---
interface Props {
  eyebrow?: string;
  title: string;
  lead?: string;
  description?: string;
}

const { eyebrow, title, lead, description } = Astro.props;
---

<div class="section-lg border-b border-border">
  <div class="container mx-auto px-4 md:px-6 lg:px-8">
    <div class="max-w-3xl">
      {eyebrow && (
        <p class="eyebrow text-text-muted mb-4 font-medium tracking-wider" data-reveal="fade-up">
          {eyebrow}
        </p>
      )}
      <h1 class="font-bold text-brand tracking-[-0.05em] mb-6 leading-[1.1]" data-reveal="fade-up" data-reveal-delay="100">
        {title}
      </h1>
      {lead && (
        <p class="text-xl md:text-2xl text-text-secondary mb-6 max-w-2xl leading-[1.5] font-normal tracking-[-0.01em]" data-reveal="fade-up" data-reveal-delay="200">
          {lead}
        </p>
      )}
      {description && (
        <p class="text-lg text-text-secondary max-w-2xl leading-[1.7] tracking-[-0.01em]" data-reveal="fade-up" data-reveal-delay="300">
          {description}
        </p>
      )}
    </div>
  </div>
</div>

