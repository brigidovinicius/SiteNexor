---
interface Props {
  eyebrow?: string;
  title: string;
  lead?: string;
  description?: string;
}

const { eyebrow, title, lead, description } = Astro.props;
---

<div class="py-24 md:py-32 border-b border-zinc-200">
  <div class="container mx-auto px-4">
    {eyebrow && (
      <p class="text-brand-700 font-semibold text-sm uppercase tracking-wider mb-4" data-reveal="fade-up">
        {eyebrow}
      </p>
    )}
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-zinc-900 tracking-tight mb-6 max-w-4xl" data-reveal="fade-up" data-reveal-delay="100">
      {title}
    </h1>
    {lead && (
      <p class="text-xl md:text-2xl text-zinc-600 mb-6 max-w-3xl leading-relaxed" data-reveal="fade-up" data-reveal-delay="200">
        {lead}
      </p>
    )}
    {description && (
      <p class="text-lg text-zinc-600 max-w-3xl leading-relaxed" data-reveal="fade-up" data-reveal-delay="300">
        {description}
      </p>
    )}
  </div>
</div>

