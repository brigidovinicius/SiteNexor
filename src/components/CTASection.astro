---
interface Props {
  title: string;
  description?: string;
  buttonText: string;
  buttonHref: string;
}

const { title, description, buttonText, buttonHref } = Astro.props;
---

<section class="section bg-bg">
  <div class="container mx-auto px-4 text-center">
    <h2 class="font-bold text-brand mb-8 tracking-tight max-w-3xl mx-auto" data-reveal="fade-up">
      {title}
    </h2>
    {description && (
      <p class="lead text-text-secondary mb-12 max-w-2xl mx-auto" data-reveal="fade-up" data-reveal-delay="100">
        {description}
      </p>
    )}
    <a href={buttonHref} class="btn bg-accent hover:bg-accent-hover text-white px-10 py-4 font-semibold transition-premium rounded-xl text-base tracking-tight shadow-premium hover:shadow-premium-md hover:-translate-y-0.5" data-reveal="fade-up" data-reveal-delay="200">
      {buttonText}
    </a>
  </div>
</section>

