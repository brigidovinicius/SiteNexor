---
interface Props {
  title: string;
  description?: string;
  href: string;
}

const { title, description, href } = Astro.props;
---

<a href={href} class="group block p-8 border border-zinc-200 rounded-lg hover:border-brand-700 hover:shadow-lg transition-all" data-reveal="fade-up">
  <h3 class="text-xl font-bold text-zinc-900 mb-3 group-hover:text-brand-700 transition-colors">
    {title}
  </h3>
  {description && (
    <p class="text-zinc-600 mb-4 leading-relaxed">
      {description}
    </p>
  )}
  <span class="text-brand-700 font-medium inline-flex items-center gap-2 group-hover:gap-3 transition-all">
    Saiba mais
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
    </svg>
  </span>
</a>

