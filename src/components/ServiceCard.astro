---
interface Props {
  title: string;
  description?: string;
  href: string;
}

const { title, description, href } = Astro.props;
---

<a href={href} class="card group hover:-translate-y-0.5" data-reveal="fade-up" aria-label={`Saiba mais sobre ${title}`}>
  <h3 class="text-xl font-semibold text-brand mb-4 tracking-tight group-hover:text-accent transition-premium">
    {title}
  </h3>
  {description && (
    <p class="text-text-secondary mb-6 leading-relaxed text-base">
      {description}
    </p>
  )}
  <span class="text-accent font-medium inline-flex items-center gap-2 group-hover:gap-2.5 transition-all text-sm tracking-tight">
    Saiba mais
    <svg class="w-4 h-4 transition-transform transition-fast group-hover:translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
    </svg>
  </span>
</a>

