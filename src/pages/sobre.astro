---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/Section.astro';
---

<BaseLayout title="Sobre Nós" description="Conheça mais sobre a nossa empresa">
  <Section>
    <div class="container mx-auto px-4 py-16">
      <h1 class="text-4xl font-bold mb-8" data-reveal="fade-up">Sobre Nós</h1>
      <div class="max-w-3xl" data-reveal="fade-up" data-reveal-delay="100">
        <p class="text-lg mb-4">
          Informações sobre a empresa serão inseridas aqui.
        </p>
      </div>
    </div>
  </Section>
</BaseLayout>

