---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageHeader from '../../components/PageHeader.astro';
import ServiceCard from '../../components/ServiceCard.astro';
---

<BaseLayout 
  title="Soluções"
  description="Soluções civis para operações industriais críticas. Execução chave na mão, obras civis, infraestrutura, adequações e manutenção industrial."
>
  <PageHeader
    title="Soluções"
  />

  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto" data-reveal-stagger>
        <ServiceCard
          title="Execução Civil Industrial – Chave na Mão"
          description="Gestão completa do projeto, do planejamento à entrega, com um único responsável técnico."
          href="/solucoes/chave-na-mao"
        />
        <ServiceCard
          title="Obras Civis Industriais"
          description="Galpões, bases de máquinas, pisos industriais e infraestrutura de apoio."
          href="/solucoes/obras-civis-industriais"
        />
        <ServiceCard
          title="Infraestrutura e Adequações Industriais"
          description="Ampliações, adequações para novos processos e retrofit de estruturas existentes."
          href="/solucoes/infraestrutura-adequacoes"
        />
        <ServiceCard
          title="Manutenção Civil Industrial"
          description="Manutenção preventiva e corretiva, paradas programadas e suporte técnico contínuo."
          href="/solucoes/manutencao-civil-industrial"
        />
      </div>
    </div>
  </section>
</BaseLayout>

