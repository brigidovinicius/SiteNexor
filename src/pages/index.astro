---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import SectionHeader from '../components/SectionHeader.astro';
import ServiceCard from '../components/ServiceCard.astro';
import Checklist from '../components/Checklist.astro';
import CTASection from '../components/CTASection.astro';
import QuoteBand from '../components/QuoteBand.astro';
---

<BaseLayout 
  title="Início"
  description="Execução civil industrial com responsabilidade total, do planejamento à entrega. Soluções técnicas completas para ambientes de alta exigência operacional."
>
  <!-- Hero com vídeo -->
  <Hero
    title="Execução civil industrial com responsabilidade total"
    subtitle="NEXOR Industrial"
    description="Soluções técnicas completas para ambientes de alta exigência operacional, com foco em segurança, prazo e qualidade."
    videoSrc="/videos/hero-video.mov"
    videoPoster="/images/hero-poster.jpg"
    ctaText="Solicitar Orçamento"
    ctaHref="/contato"
  />

  <!-- Quem Somos (Resumo) -->
  <section class="section bg-surface border-b border-border">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <SectionHeader
          title="Quem Somos"
          lead="Parceira técnica de indústrias que exigem alto padrão de engenharia, organização de obra e previsibilidade de entrega."
        />
        <div class="space-y-6 text-lg text-text-secondary leading-[1.7] tracking-[-0.01em]">
          <p data-reveal="fade-up">
            A NEXOR Industrial é uma empresa especializada em execução civil industrial, atuando como parceira técnica de indústrias que exigem alto padrão de engenharia, organização de obra e previsibilidade de entrega.
          </p>
          <p data-reveal="fade-up">
            Assumimos a gestão completa do projeto, reduzindo riscos, interfaces e retrabalhos, com um único responsável por toda a execução.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Nossas Soluções -->
  <section class="section bg-bg border-b border-border">
    <div class="container mx-auto px-4">
      <SectionHeader
        title="Soluções civis para operações industriais críticas"
        centered={true}
      />
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-5xl mx-auto" data-reveal-stagger>
        <ServiceCard
          title="Execução civil industrial chave na mão"
          href="/solucoes/chave-na-mao"
        />
        <ServiceCard
          title="Obras civis e infraestrutura industrial"
          href="/solucoes/obras-civis-industriais"
        />
        <ServiceCard
          title="Ampliações e adequações industriais"
          href="/solucoes/infraestrutura-adequacoes"
        />
        <ServiceCard
          title="Manutenção civil industrial"
          href="/solucoes/manutencao-civil-industrial"
        />
      </div>
    </div>
  </section>

  <!-- Diferenciais -->
  <section class="section bg-surface border-b border-border">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <SectionHeader
          title="Diferenciais"
          lead="O que nos torna parceiros estratégicos confiáveis"
        />
        <Checklist
          items={[
            "Gestão técnica integrada",
            "Planejamento detalhado antes da execução",
            "Forte cultura de segurança",
            "Controle rigoroso de prazos e custos",
            "Comunicação clara com o cliente",
            "Padrão executivo industrial"
          ]}
        />
      </div>
    </div>
  </section>

  <!-- Slogan -->
  <QuoteBand quote="Excelência que move a indústria" />

  <!-- Segurança -->
  <QuoteBand 
    quote="Segurança não é diferencial. É requisito básico." 
    href="/seguranca-e-qualidade"
  />

  <!-- Projetos Slider (Placeholder) -->
  <section class="section bg-bg border-b border-border">
    <div class="container mx-auto px-4">
      <SectionHeader
        title="Projetos"
        lead="Realizações que demonstram nossa capacidade técnica e comprometimento"
        centered={true}
      />
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto" data-reveal-stagger>
        {[1, 2, 3, 4, 5].map((i) => (
          <div class="card border-border overflow-hidden" data-reveal="fade-up">
            <div class="h-64 bg-bg flex items-center justify-center">
              <p class="text-text-subtle text-sm">Imagem placeholder</p>
            </div>
            <div class="p-8">
              <h3 class="font-semibold text-brand mb-3 tracking-tight text-lg">Projeto Industrial</h3>
              <p class="text-text-muted text-sm mb-1">Local: —</p>
              <p class="text-text-muted text-sm">Categoria: Obra civil</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Principal -->
  <CTASection
    title="Fale com a NEXOR Industrial"
    description="Entre em contato para discutir seu projeto ou necessidade de execução civil industrial."
    buttonText="Solicitar contato"
    buttonHref="/contato"
  />
</BaseLayout>
