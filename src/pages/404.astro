---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/Section.astro';
---

<BaseLayout title="404 - Página não encontrada">
  <Section>
    <div class="container mx-auto px-4 py-16 text-center">
      <h1 class="text-6xl font-bold mb-4" data-reveal="fade-up">404</h1>
      <p class="text-xl mb-8" data-reveal="fade-up" data-reveal-delay="100">
        Página não encontrada
      </p>
      <a href="/" class="text-blue-600 hover:underline" data-reveal="fade-up" data-reveal-delay="200">
        Voltar para a home
      </a>
    </div>
  </Section>
</BaseLayout>

